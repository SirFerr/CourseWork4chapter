<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ToggleButton
        android:id="@+id/btn1ItemMain"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="+"
        android:textOff="+"
        android:textOn="+"
        app:layout_constraintEnd_toStartOf="@+id/btn2ItemMain"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textItemMain"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textItemMain"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/btn1ItemMain"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <ToggleButton
        android:id="@+id/btn2ItemMain"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="Н"
        android:textOff="Н"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textItemMain"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn1ItemMain"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>